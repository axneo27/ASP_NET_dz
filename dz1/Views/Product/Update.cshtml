@model Product

<h2>Редагування товару</h2>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Назва</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Категорія</label>
        <select asp-for="CategoryId" class="form-select" required>
            <option value="">Виберіть категорію</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Ціна</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" required />
    </div>

    <div class="mb-3">
        <label asp-for="Amount" class="form-label">Кількість</label>
        <input asp-for="Amount" class="form-control" type="number" required />
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Опис</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Image" class="form-label">URL зображення</label>
        <input asp-for="Image" class="form-control" type="url" />
    </div>

    <button type="submit" class="btn btn-primary">Зберегти</button>
    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
    </div>
</form>
