@model IEnumerable<Category>
@{
    ViewData["Title"] = "Категорії";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex">
    <h1 class="flex-grow-1">Категорії</h1>
    <div class="flex-grow-1 text-end">
        <a class="btn btn-dark" asp-controller="Category" asp-action="Create">Додати категорію</a>
    </div>
</div>
<div>
    <table class="table table-striped w-75 m-auto">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col" class="text-center">Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td class="text-center">@category.Name</td>
                    <td class="text-end">
                        <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-success m-1">Редагувати</a>
                        <button type="button" class="btn btn-danger m-1" data-bs-toggle="modal" data-bs-target="#deleteModal" 
                                data-category-id="@category.Id" data-category-name="@category.Name">
                            Видалити
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">⚠️ Підтвердження видалення</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Ви дійсно бажаєте видалити категорію "<strong><span id="categoryName"></span></strong>"?</p>
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <strong>Увага!</strong> Разом з категорією будуть видалені всі товари, що належать до неї. 
                    Цю дію неможливо скасувати!
                </div>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" id="categoryId" name="id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Скасувати</button>
                    <button type="submit" class="btn btn-danger">Видалити</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const categoryId = button.getAttribute('data-category-id');
            const categoryName = button.getAttribute('data-category-name');
            
            deleteModal.querySelector('#categoryId').value = categoryId;
            deleteModal.querySelector('#categoryName').textContent = categoryName;
        });
    </script>
}